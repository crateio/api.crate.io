#!/usr/bin/env bash

# Fail fast and fail hard.
set -eo pipefail


indent() {
    RE="s/^/       /"
    [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

function puts-step (){
  echo "-----> $@"
}


# Collect Static Files
if (python -m warehouse help collectstatic &> /dev/null) then
    puts-step "Collecting static files"
    python -m warehouse collectstatic --noinput 1> /dev/null
fi
